#go{	
		font-family: 'fontin_sans_rgbold';
		position: relative;
		text-align: center;
		background-color: rgba(153, 202, 235, .75);
		width:50%;
		margin-left: 25%;
		margin-right: 25%;
		height: 80%;
		margin-bottom: 10%;
		margin-top: 10%;
		font-size: 100px;
		padding: 0;
		z-index: 15;
		border-radius: 20px;
}

#shibuya {
	position: absolute;
	background-image: url(<%= asset_path 'shibuya-night-s.jpg' %>);
	background-position: center;
	background-repeat: no-repeat;
	top:-7%;
	width: 110%;
	z-index: -1;
	left: -10%;
	height: 107%;
}

a:link {text-decoration: none;
		color: #007AAC;}

a:visited { color: #007AAC;}

a:hover {text-decoration: underline;}

a.entrance:hover{
		text-decoration: none;
		font-weight: bold;
}
a.retreat:hover{
		text-decoration: none;
}

